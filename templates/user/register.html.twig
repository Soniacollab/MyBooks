{% extends "base.html.twig" %}

{% block title %}Créer un nouveau compte{% endblock %}

{% block body %}
    <main>
        <!-- Titre de la page -->
        <div class="p-3 mx-auto text-center">
            <h1 class="display-4">Créer un nouveau compte</h1>
        </div>

        <!-- Contenu de la page -->
        <div class="py-5 bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-8 mx-auto">
                        {{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}

                        {{ form_row(form.email) }}
                        {{ form_row(form.password.first, {'label': 'Mot de passe'}) }}
                        {{ form_row(form.password.second, {'label': 'Confirmer le mot de passe'}) }}

                        <button type="submit" class="btn btn-primary mt-3">Créer mon compte</button>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
